<% if !user_signed_in? %>
<%= link_to ("Sign In"), new_user_session_path %> |
<%= link_to ("Sign Up"), new_user_registration_path %>
  <% else %>
 <%= current_user.email %> |
 <%= link_to ("Log Out"), destroy_user_session_path, method: :delete %> 
<% end %>
<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Model</th>
      <th>Price</th>
      <th>Milage</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.brand %></td>
        <td><%= car.model %></td>
        <td><%= car.price %></td>
        <td><%= car.milage %></td>
        <td><%= car.image %></td>
        <td><%= car.user.email %> </td>
        <td><%= link_to 'Show', car %></td>
        <% if  car.user == current_user %> 
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

